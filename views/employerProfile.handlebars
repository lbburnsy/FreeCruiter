{{!-- Employer Profile Page --}}
{{> navbar}}
<main>

  <div class="container freelancerprofile mt-5">
    <div class="row mt-5 pt-2">
      <div class="d-flex flex-row freelancerprofileheader pt-5 mb-3">
        <h4 class="">Employer Dashboard</h4>
        <a href="/profile/employer/jobs" class="btn btn-primary btn-sm h-10 ms-auto mb-3">View your jobs</a>
      </div>
      <div class="col-lg-4 col-md-4 col-sm-12">
        <div class="d-flex mb-3">
          <img src="../assets/instagram-3814081_1280.png" class="rounded-circle m-3 mx-auto" alt="Profile Picture" width="220px"
            height="220px">
        </div>
        <div class="shadow p-3 mb-3 bg-body rounded">
          <div class="list-group">
            <a href="#employername" class="list-group-item list-group-item-action" aria-current="true">
              Company Name</a>
            <a href="#employerbio" class="list-group-item list-group-item-action">Bio</a>
            <a href="#employerlocation" class="list-group-item list-group-item-action">Location</a>
            <a href="#freelancerwebsite" class="list-group-item list-group-item-action">Website</a>

          </div>
        </div>
      </div>

      <div class="col-lg-8 col-md-8 col-sm-12">
        <div class="card mb-3 shadow p-2 mb-3 bg-body rounded" id="employername">
          <div class="card-body d-flex flex-column">
            <h5 class="card-title">Company Name</h5>
            <p>{{name}}</p>
          </div>
        </div>
        <div class="card mb-3 shadow p-2 mb-3 bg-body rounded" id="employerbio">
          <div class="card-body d-flex flex-column">
            <h5 class="card-title">Bio</h5>
            <p>{{bio}}</p>
          </div>
        </div>
        <div class="card mb-3 shadow p-2 mb-3 bg-body rounded" id="employerlocation">
          <div class="card-body d-flex flex-column">
            <h5 class="card-title">Location</h5>
            <p>{{location}}</p>
          </div>
        </div>
        <div class="card mb-3 shadow p-2 mb-3 bg-body rounded" id="freelancerwebsite">
          <div class="card-body d-flex flex-column">
            <h5 class="card-title">Website</h5>
            <a href="{{website}}" target="_blank">{{website}}</a>

          </div>
        </div>

      </div>

    </div>


  </div>
</main>