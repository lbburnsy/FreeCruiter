{{!-- Employer Profile Page --}}
{{> navbar}}
<main>

  <div class="container freelancerprofile mt-5 pt-2">
    <div class="row mt-5 pt-2">
      <div class="d-flex flex-row freelancerprofileheader pt-5">
        <h3 class="">Employer Profile Page</h3>
        <a href="/profile/employer/jobs" class="btn btn-primary btn-sm h-10 ms-auto mb-3">Create job listing</a>
      </div>
      <div class="col-lg-4 col-md-4 col-sm-12">
        <div>
          <img src="../assets/instagram-3814081_1280.png" class="rounded-circle m-3" alt="Profile Picture" width="220px"
            height="220px">
        </div>
        <div class="shadow p-3 mb-3 bg-body rounded">
          <div class="list-group">
            <a href="#employername" class="list-group-item list-group-item-action" aria-current="true">
              Company Name
            </a>
            <a href="#employerlocation" class="list-group-item list-group-item-action">Location</a>
            <a href="#employerbio" class="list-group-item list-group-item-action">Bio</a>
            <a href="#employerwebsite" class="list-group-item list-group-item-action">Website</a>

          </div>
        </div>
      </div>

      <div class="col-lg-8 col-md-8 col-sm-12">
        <div class="card mb-3 shadow p-3 mb-3 bg-body rounded" id="employername">
          <div class="card-body d-flex flex-column">
            <h4 class="card-title">Company Name</h4>
            <p>{{name}}</p>
            <a href="#" class="btn btn-outline-primary btn-sm w-10 ms-auto">Update</a>
          </div>
        </div>
        <div class="card mb-3 shadow p-3 mb-3 bg-body rounded" id="employerbio">
          <div class="card-body d-flex flex-column">
            <h4 class="card-title">Bio</h4>
            <p>{{bio}}</p>
            <a href="#" class="btn btn-outline-primary btn-sm w-10 ms-auto">Update</a>
          </div>
        </div>
        <div class="card mb-3 shadow p-3 mb-3 bg-body rounded" id="employerlocation">
          <div class="card-body d-flex flex-column">
            <h4 class="card-title">Location</h4>
            <p>{{location}}</p>
            <a href="#" class="btn btn-outline-primary btn-sm w-10 ms-auto">Update</a>
          </div>
        </div>
        <div class="card mb-3 shadow p-3 mb-3 bg-body rounded" id="freelancerwebsite">
          <div class="card-body d-flex flex-column">
            <h4 class="card-title">Website</h4>
            <a href="{{website}}" target="_blank">{{website}}</a>

            <a href="#" class="btn btn-outline-primary btn-sm w-10 ms-auto">Update</a>
          </div>
        </div>

      </div>

    </div>


  </div>
</main>