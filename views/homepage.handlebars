{{!-- Homepage template/ --}}

{{> navbar}}

<main>
  <div class="container heroImage">
    <div class="row text-center introText">
      <div class="col-4-lg col-12-md col-12-sm col-12-xs">
        <a class="btn btn-light px-5 viewMyWorkBtn" href="#sampleWork">Signup as a Freelancer</a>
        <a class="btn btn-light px-5 viewMyWorkBtn" href="#sampleWork">Signup as an Employer</a>
      </div>
    </div>
  </div>

  <section class="section-1">
    <div class="container">
      <div class="row pt-5">
        <h2 id="latestJobs">Latest Jobs</h2>
      </div>

      <div>
        <a href="#frontEnd"><button type="button" class="btn btn-dark">Front-End</button></a>
        <a href="#backEnd"><button type="button" class="btn btn-dark">Back-End</button></a>
        <a href="#fullStack"><button type="button" class="btn btn-dark">Full-Stack</button></a>
      </div>

      <br>

  </section>

  <section class="container">

    <section class="container">
      <h4 id="frontEnd">Front-End</h4>
      {{#each frontEndJobs as |job|}}
      <div class="card mx-5 my-3">
        <div class="card-body">
          <h4 id="{{job.name}}">{{job.name}}</h4>
          <div>{{format_date job.date_created}}</div>
          <div>{{job.location}}</div>
        </div>
      </div>
      {{/each}}
    </section>

    <section class="container">
      <h4 id="backEnd">Back-End</h4>
      {{#each backEndJobs as |job|}}
      
      <div class="card mx-5 my-3">
        <div class="card-body">
          <h4 id="{{job.name}}">{{job.name}}</h4>
          <div>{{format_date job.date_created}}</div>
          <div>{{job.location}}</div>
        </div>
      </div>
      {{/each}}
    </section>

    
    <section class="container">
      <h4 id="fullStack">Full-Stack</h4>
      {{#each fullStackJobs as |job|}}
      
      <div class="card mx-5 my-3">
        <div class="card-body">
          <h4 id="{{job.name}}">{{job.name}}</h4>
          <div>{{format_date job.date_created}}</div>
          <div>{{job.location}}</div>
        </div>
      </div>
      {{/each}}
    </section>


  </section>
</main>


